{
  "name": "vite-csp",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "p:build": "turbo build --filter=vite-plugin-fingerprintjs",
    "p:test": "turbo test --filter=vite-plugin-fingerprintjs",
    "dev": "turbo dev",
    "preview": "turbo preview",
    "docs:dev": "turbo dev --filter=docs",
    "docs:build": "turbo build --filter=docs",
    "test": "pnpm exec playwright test",
    "test:ui": "pnpm exec playwright test --ui",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "bash scripts/release.sh vite-plugin-fingerprintjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@types/node": "^20.14.2",
    "prettier": "^3.1.1",
    "turbo": "^2.0.0",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.15.6"
}
